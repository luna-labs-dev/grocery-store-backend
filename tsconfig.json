{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "tests", "prisma/**/*.ts", "commitlint.config.js"],
  "exclude": []
}
