{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "prisma",
    "commitlint.config.js",
    "src/main/types/nodeModules/rule-engine.d.ts"
  ],
  "exclude": []
}
